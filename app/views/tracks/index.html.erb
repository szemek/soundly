<div ng-app="project">
  <div ng-controller="TracksCtrl">
    <input type="text" ng-model="search" class="search-query" placeholder="Search">
    <table>
      <thead>
      <tr>
        <th>Track</th>
        <th>Artist</th>
        <th>Name</th>
        <th>Listened</th>
      </tr>
      </thead>
      <tbody>
      <tr ng-repeat="track in tracks | orderBy:'uts':reverse=true | filter:search | limitTo:50" >
        <td>{{track.name}}</td>
        <td>{{track.artist}}</td>
        <td>{{track.album}}</td>
        <td>{{track.uts * 1000 | date:'yyyy-MM-dd HH:mm:ss Z'}}</td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
